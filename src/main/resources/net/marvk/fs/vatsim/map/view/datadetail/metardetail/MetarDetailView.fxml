<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import net.marvk.fs.vatsim.map.view.datadetail.DataDetailPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<DataDetailPane headerText="METAR" fx:id="container" xmlns="http://javafx.com/javafx"
                xmlns:fx="http://javafx.com/fxml"
                fx:controller="net.marvk.fs.vatsim.map.view.datadetail.metardetail.MetarDetailView">
    <contentNode>
        <HBox styleClass="detail-container">
            <TextArea minWidth="0" minHeight="55" prefHeight="55" prefRowCount="3" HBox.hgrow="ALWAYS"
                      maxWidth="Infinity"
                      prefWidth="200"
                      fx:id="metarText"
                      editable="false"
                      wrapText="true"/>
            <VBox styleClass="button-bar-vertical" >
                <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="icon-button2" maxHeight="Infinity"
                        fx:id="refreshMetar">
                    <graphic>
                        <FontIcon iconLiteral="mdi2d-download"/>
                    </graphic>
                </Button>
            </VBox>
        </HBox>
    </contentNode>
</DataDetailPane>
