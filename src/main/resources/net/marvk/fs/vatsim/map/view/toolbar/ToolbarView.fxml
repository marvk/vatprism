<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import net.marvk.fs.vatsim.map.view.vatprism2.controls.*?>
<HBox alignment="CENTER_LEFT" fx:id="container" spacing="1" stylesheets="@toolbar.css" styleClass="button-bar-horizontal"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.marvk.fs.vatsim.map.view.toolbar.ToolBarView">
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
    </padding>
    <children>
        <IconButton iconLiteral="mdi2c-cog" onAction="#openSettings" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Settings"/>
            </tooltip>
        </IconButton>
        <IconButton fx:id="reload" onAction="#refresh" iconLiteral="mdi2d-download" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Refresh"/>
            </tooltip>
        </IconButton>
        <IconToggleButton fx:id="autoReload" iconLiteral="mdi2c-cached" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Refresh Automatically"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton fx:id="pilots" styleClass="icon-button2" iconLiteral="vatprism-pilot" userData="pilots.enabled" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Flights"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="vatprism-pilot-label" fx:id="pilotsLabel" userData="pilots.label" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Flight Labels"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="vatprism-pilot-on-ground" fx:id="pilotsOnGround" userData="pilots.pilots_on_ground" styleClass="icon-button2"
                          mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Flights on Ground"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="mdi2f-filter" fx:id="filters" userData="filters.enabled" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Filtered Flights"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="mdi2m-map-marker-distance" fx:id="connections" userData="connections.enabled" styleClass="icon-button2"
                          mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Connections"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="vatprism-airport" fx:id="airports" userData="airports.enabled" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Airports"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="vatprism-airport-label" fx:id="airportsLabel" userData="airports.label" styleClass="icon-button2"
                          mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Airport Labels"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="vatprism-airport-inactive" fx:id="airportsInactive"
                          userData="airports.paint_uncontrolled_airports_with_arrivals_or_departures"
                          styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Airports with Flights but no Controllers"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="vatprism-fir" fx:id="firs" userData="active_firs.enabled" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Active FIRs"/>
            </tooltip>
        </IconToggleButton>
        <IconToggleButton iconLiteral="vatprism-fir-inactive" fx:id="firsInactive" userData="inactive_firs.enabled" styleClass="icon-button2"
                          mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Inactive FIRs"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="vatprism-uir" fx:id="uirs" userData="active_uirs.enabled" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Active UIRs"/>
            </tooltip>
        </IconToggleButton>
        <!--This toggle isn't really needed, I think this might only be used for debugging purposes and doesn't warrent quick access-->
        <!--        <IconToggleButton fx:id="uirsInactive" userData="inactive_uirs.enabled" styleClass="icon-button2" mnemonicParsing="false">-->
        <!--            <graphic>-->
        <!--                <FontIcon iconLiteral="vatprism-uir-inactive"/>-->
        <!--            </graphic>-->
        <!--        </IconToggleButton>-->
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="hyperlink-label" text="Changelog" onMouseClicked="#openChangelog"/>
        <Separator orientation="VERTICAL"/>
        <Label style="-fx-font-weight: bold" text="VATprism"/>
        <Label text=" is still in Development. Join the discourse!">
            <padding>
                <Insets right="10.0"/>
            </padding>
        </Label>
        <IconButton iconLiteral="mdi2g-github" onAction="#openGithub" styleClass="icon-button2, github-button" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="GitHub"/>
            </tooltip>
        </IconButton>
        <IconButton iconLiteral="mdi2d-discord" onAction="#openDiscord" styleClass="icon-button2, discord-button" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Discord"/>
            </tooltip>
        </IconButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="mdi2f-fullscreen" fx:id="fullScreen" styleClass="icon-button2" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Fullscreen"/>
            </tooltip>
        </IconToggleButton>
        <Separator orientation="VERTICAL"/>
        <IconToggleButton iconLiteral="mdi2b-bug" fx:id="metrics" styleClass="icon-button2" userData="metrics.enabled" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Debug Information"/>
            </tooltip>
        </IconToggleButton>
        <IconButton iconLiteral="mdi2m-magnify" fx:id="sceneView" styleClass="icon-button2" onAction="#showSceneView" userData="metrics.enabled"
                    mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Scene View"/>
            </tooltip>
        </IconButton>
        <Separator fx:id="debugSeparator" orientation="VERTICAL" userData="metrics.enabled"/>
        <IconButton iconLiteral="mdi2h-help-circle" styleClass="icon-button2" onAction="#openUsageGuide" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Usage Guide"/>
            </tooltip>
        </IconButton>
        <IconButton iconLiteral="mdi2i-information" styleClass="icon-button2" onAction="#showAbout" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="About"/>
            </tooltip>
        </IconButton>
    </children>
</HBox>
